<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pa_presentation"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".view.FrgHome">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:padding="10dp"
        android:text="@string/pa_home_welcome"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvUserNme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:text="Pablo" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="150dp">

    </View>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProfile"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:text="@string/pa_home_profile"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContent"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:text="@string/pa_home_content"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAbout"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:text="@string/pa_home_about"
        android:textSize="16sp" />

</LinearLayout>